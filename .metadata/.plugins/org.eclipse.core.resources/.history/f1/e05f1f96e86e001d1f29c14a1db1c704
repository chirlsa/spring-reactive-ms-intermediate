  port: 9001
  shutdown: graceful
  tomcat:
    connection-timeout: 2s
    keep-alive-timeout: 15s
    threads:
      max: 50
      min-spare: 5

spring:
  application:
    name: catalog-service
  lifecycle:
    timeout-per-shutdown-phase: 15s
  
  
  jpa:
    hibernate:
      ddl-auto: update  
  datasource:
    username: user
    password: password
    url: jdbc:postgresql://host.docker.internal:5432/mydb_catalog
    hikari:
      connection-timeout: 2000 #ms
      maximum-pool-size: 5

